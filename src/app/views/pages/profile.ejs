<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    
    <div class="container h-100 d-flex flex-column align-items-center justify-content-center">
        <img src="/img/profile.jpeg" alt="" class="rounded-circle" width="200" height="200">
        <h4><%= username %></h4>
        <h4><%= email %></h4>
        <form action="http://localhost:8081/auth/logout" method="post">
            <button class="btn btn-warning mb-2">Logout</button>
        </form>
        
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Delete Account
          </button>
    </div>

  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Account Alert</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Apakah Anda Yakin Ingni Menghapus Account?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-danger deleteAccount">Delete</button>
        </div>
      </div>
    </div>
  </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let deleteAcc = document.querySelector('.deleteAccount')

        deleteAcc.addEventListener('click', () => {
            fetch("http://localhost:8081/user", {
                method: "DELETE",
            })
            .then(res => res.json)
            .then(res => {
                console.log(res)
                alert("success deleted account")
                window.location.href = 'http://localhost:8081/auth/login'
            })
        })

    </script>
</body>
</html>